.top-des{
  background-color: #FFF;
  padding: 0 30rpx;
}
.input-name{
  font-size: 28rpx;
  /* line-height: 1.2; */
  padding: 16rpx 0;
  border-bottom: 2rpx solid #e6e6e6;
}
.input-des{
  padding: 16rpx 0;
  font-size: 28rpx;
}
.blank{
  height: 20rpx;
}

.add-btn{
  background-color: #e9e9e9;
  height: 128rpx;
  width: 128rpx;
  text-align: center;
}
.add-poster{
  padding: 24rpx 0;
}
.add-btn image{
  padding-top: 14rpx;
  width: 64rpx;
  height: 64rpx;
  vertical-align: bottom;
}
.up-btn-txt{
  font-size: 24rpx;
  line-height: 1.5;
  color: gray;
}
.poster-img{
  position: relative;
  overflow: hidden;
}
.poster-item{
  float: left;
  margin: 0 20rpx;
}
.add-poster::after{
  display: block;
  content: '';
  clear: both;
}
.price-input{
  background-color: #FFF;
  padding: 24rpx 30rpx;
}
.price-input input{
  font-size: 24rpx;
}
.cate-field{
  display: flex;
  background-color: #FFF;
  padding: 24rpx 30rpx;
}
.cate-field .cate-label{
  font-size: 28rpx;
  line-height: 1;
}
.cate-field .cate-value{
  padding-left: 20rpx;
  flex: 1;
  font-size: 28rpx;
  line-height: 1;
}
.poster-img image {
  width: 128rpx;
  height: 128rpx;
}
.close-btn{
  position: absolute;
  z-index: 1;
  /* background: url(/asserts/i/close-circle.png); */
}
.close-btn image{
  height: 40rpx;
  
  width: 40rpx;
}