
.poster image{
  min-width: 100%;
}
swiper{
  height: auto;
}
.info{
  padding: 24rpx 30rpx;
  background-color: #FFF;
}
.price{
  
  display: flex;
  justify-content: space-between;
}
.title{
  font-size: 28rpx;
  line-height: 1.2;
  padding-top: 24rpx;
}
.sub-txt{
  padding: 24rpx 0;
  line-height: 1.2;
  font-size: 24rpx;
  color: gray;
}
button.menu-list{
  background: #FFF;
  /* border: none !important; */
  outline: none;
  border-radius: 0;
}
button.menu-list::after{
  border: none;
}
.check-num{
  font-size: 28rpx;
}
.price-txt{
  font-size: 36rpx;
  color: red;
}
.visit{
  padding-top: 24rpx;
  border-top: 1rpx solid #e6e6e6;
}
.message{
  background-color: #FFF;
}
.blank{
  height: 20rpx;
  overflow: hidden;
}
.message-title{
  font-size: 28rpx;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.message-input{
  padding: 24rpx 30rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
}
.input-field{
  border-radius: 8rpx;
  overflow: hidden;
  padding-left: 20rpx;
  flex: 1;
  display: flex;
  align-items: center;
}
.item{
  padding: 24rpx 30rpx;
}
.item:not(:last-child) {
  border-bottom: 2rpx solid #e9e9e9e9;
}
.item-header{
  display: flex;
  justify-content: space-between;
}
.input-field input {
  padding: 0 20rpx;
  height: 64rpx;
  flex: 1;
  background-color: #e9e9e9e9;
}
.meg-button{
  font-size: 28rpx;
  line-height: 64rpx;
  height: 64rpx;
  background-color: yellow;
  vertical-align: middle;
  width: 128rpx;
  text-align: center;
}
.user-header{
  display: flex;
  align-items: center;
}
.add-time{
  font-size: 24rpx;
  color:gray;
}
input{
  background-color: #e6e6e6;
}
.item-content{
  padding-top: 24rpx;
  font-size: 28rpx;
  line-height: 1.2;
}
.nickname{
  padding-left: 20rpx;
  font-size: 28rpx;
}
.user-header image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 64rpx;
  vertical-align: bottom;
}
.footer-menu{
  position: relative;
  background-color: #FFF;
}
.menu-list{
  vertical-align: bottom;
  flex: 1;
  line-height: 1;
  padding: 6rpx 0;
  text-align: center;
  
}
.menu-txt{
  padding-top: 8rpx;
  font-size: 24rpx;
}
.menu-list image{
  width: 48rpx;
  height: 48rpx;
  line-height: 1;
  vertical-align: bottom;
}
.menu-content{
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  /* padding: 10rpx 0; */
}
.menu-list:not(:last-child){
  border-right: 2rpx solid #e6e6e6;
}
.contact{
  height: 96rpx;
  width: 96rpx;
  border-radius: 96rpx;
  background-color: rgba(0, 0, 0, .5);
  position: absolute;
  bottom: 100%;
  z-index: 1;
  right: 0;
  margin-bottom: 20rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: column;
  align-content: center;
}
.contact image {
  padding-top: 8rpx;
  width: 48rpx;
  height: 48rpx;
  padding-left: 24rpx;
}
.contact-txt{
  color: #FFF;
  font-size: 24rpx;
  text-align: center;
}